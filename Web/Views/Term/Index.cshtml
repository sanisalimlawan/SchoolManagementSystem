@using Application.ViewModels

@model PaginatedList<TermViewModel>
@{
    var pageSize = ViewBag.options.PageSize;
    var pageIndex = ViewBag.options.PageIndex;
    var query = ViewBag.options.Query;
    ViewData["Title"] = "Term";
}
<div class="nk-block-head nk-block-head-sm">
    <div class="nk-block-between">
        <div class="nk-block-head-content">
            <h3 class="nk-block-title page-title">Term List</h3>
            <div class="nk-block-des text-soft">
                @if (Model.TotalRecords > 0)
                {
                    <p>You have total of @Model.TotalRecords.ToString("#,##") Term.</p>


                }
            </div>
        </div><!-- .nk-block-head-content -->
    </div><!-- .nk-block-between -->
</div><!-- .nk-block-head -->
@if (TempData.ContainsKey("Error"))
{
    <div class="alert alert-danger alert-dismissible alert-icon">
        <em class="icon ni ni-cross-circle"></em> <strong> @TempData["Error"] </strong><button class="close"
                                                                                               data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData.ContainsKey("Success"))
{
    <div class="alert alert-success alert-dismissible alert-icon">
        <em class="icon ni ni-check-circle"></em> <strong>@TempData["Success"]</strong><button class="close"
                                                                                               data-bs-dismiss="alert"></button>
    </div>
}

<div class="alert alert-info alert-dismissible alert-icon">
    <em class="icon ni ni-check-circle"></em> <strong>
        Welcome To Dayyib Academy Management System.
    </strong><button class="close"
                     data-bs-dismiss="alert"></button>
</div>
@if (Model.TotalRecords > 0)
{
    <!-- .nk-block-head -->
    <div class="nk-block">
        <div class="card card-bordered card-stretch">
            <div class="card-inner-group">
                <div class="card-inner position-relative card-tools-toggle">

                    <div class="card-title-group">

                        <div class="card-tools me-n1">
                            <ul class="btn-toolbar gx-1">
                                <li>
                                    <a href="#" class="btn btn-icon search-toggle toggle-search" data-target="search">
                                        <em class="icon ni ni-search"></em>
                                    </a>
                                </li><!-- li -->
                                <li class="btn-toolbar-sep"></li><!-- li -->
                                <li>
                                    <div class="toggle-wrap">
                                        <a href="#" class="btn btn-icon btn-trigger toggle" data-target="cardTools">
                                            <em class="icon ni ni-menu-right"></em>
                                        </a>
                                        <div class="toggle-content" data-content="cardTools">
                                            <ul class="btn-toolbar gx-1">
                                                <li class="toggle-close">
                                                    <a href="#" class="btn btn-icon btn-trigger toggle" data-target="cardTools">
                                                        <em class="icon ni ni-arrow-left"></em>
                                                    </a>
                                                </li><!-- li -->
                                                <li>
                                                    <div class="dropdown">
                                                        <a href="#" class="btn btn-trigger btn-icon dropdown-toggle" data-bs-toggle="dropdown">
                                                            <em class="icon ni ni-setting"></em>
                                                        </a>
                                                        <div class="dropdown-menu dropdown-menu-xs dropdown-menu-end">
                                                            <ul class="link-check">
                                                                <li>
                                                                    <span>Show</span>
                                                                </li>
                                                                <li>
                                                                    @if (pageSize == 10)
                                                                    {
                                                                        <a class="active" href=@Url.Action("Index", new { PageIndex = pageIndex, PageSize = 10, Query = query })>10</a>
                                                                    }
                                                                    else
                                                                    {
                                                                        <a href=@Url.Action("Index", new { PageIndex = pageIndex, PageSize = 10, Query = query })>10</a>
                                                                    }
                                                                </li>
                                                                <li>
                                                                    @if (pageSize == 20)
                                                                    {
                                                                        <a class="active" href=@Url.Action("Index", new { PageIndex = pageIndex, PageSize = 20, Query = query })>20</a>
                                                                    }
                                                                    else
                                                                    {
                                                                        <a href=@Url.Action("Index", new { PageIndex = pageIndex, PageSize = 20, Query = query })>20</a>
                                                                    }
                                                                </li>
                                                                <li>
                                                                    @if (pageSize == 50)
                                                                    {
                                                                        <a class="active" href=@Url.Action("Index", new { PageIndex = pageIndex, PageSize = 50, Query = query })>50</a>
                                                                    }
                                                                    else
                                                                    {
                                                                        <a href=@Url.Action("Index", new { PageIndex = pageIndex, PageSize = 50, Query = query })>50</a>
                                                                    }
                                                                </li>
                                                            </ul>
                                                        </div>
                                                    </div><!-- .dropdown -->
                                                </li><!-- li -->
                                            </ul><!-- .btn-toolbar -->
                                        </div><!-- .toggle-content -->
                                    </div><!-- .toggle-wrap -->
                                </li><!-- li -->
                            </ul><!-- .btn-toolbar -->
                        </div><!-- .card-tools -->

                        <div class="card-tools">
                            <div class="nk-block-head-content">
                                <ul class="nk-block-tools g-3">
                                    <li>
                                        <a data-bs-toggle="modal" data-bs-target="#Records" class="btn btn-primary">
                                            <em class="icon ni ni-plus"></em>
                                            <text>Add New Term</text>
                                        </a>
                                    </li>
                                </ul>
                            </div><!-- .nk-block-head-content -->
                        </div><!-- .card-tools -->


                    </div><!-- .card-title-group -->

                    <div class="card-search search-wrap" data-search="search">
                        <div class="card-body">
                            <div class="search-content">
                                <a href="#" class="search-back btn btn-icon toggle-search" data-target="search">
                                    <em class="icon ni ni-arrow-left"></em>
                                </a>
                                <form action=@Url.Action("Index")>
                                    <input type="text" name="Query" value="@query" class="form-control border-transparent form-focus-none" placeholder="Search indigenes by name and indigene number">
                                </form>
                                <button class="search-submit btn btn-icon">
                                    <em class="icon ni ni-search"></em>
                                </button>
                            </div>
                        </div>
                    </div><!-- .card-search -->
                </div><!-- .card-inner -->
                <div class="card-inner p-0 ">
                    <div class="nk-tb-list nk-tb-ulist is-compact">
                        <div class="nk-tb-list nk-tb-ulist">
                            <div class="nk-tb-item nk-tb-head">
                                <div class="nk-tb-col">#</div>
                                <div class="nk-tb-col"><span class="sub-text">Name</span></div>
                                <div class="nk-tb-col tb-col-mb"><span class="sub-text">StarDate</span></div>
                                <div class="nk-tb-col tb-col-md"><span class="sub-text">EndDate</span></div>
                                <div class="nk-tb-col "><span class="sub-text">Status</span></div>
                                <div class="nk-tb-col "><span class="sub-text">Session</span></div>

                                <div class="nk-tb-col ">
                                    <span class="sub-text"></span>
                                </div>
                            </div><!-- .nk-tb-item -->
                            @foreach (var Term in Model)
                            {
                                var idx = Model.IndexOf(Term) + 1;
                                var del = $"delete{Term.Id}";

                                <div class="nk-tb-item">

                                    <div class="nk-tb-col">
                                        @idx
                                    </div>

                                    <div class="nk-tb-col ">
                                        <span id="tes">@Term.Name</span>
                                    </div>
                                    <div class="nk-tb-col tb-col-mb">
                                        <div class="user-card">
                                            <div class="user-info">
                                                <span class="tb-lead">@Term.StartDate</span>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="nk-tb-col tb-col-mb">
                                        <span>@Term.EndDate</span>
                                    </div>

                                    <div class="nk-tb-col ">
                                        @if (Term.IsCurrent)
                                        {
                                            <span class="text-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="text-danger">InActive</span>
                                        }
                                    </div>
                                    <div class="nk-tb-col ">
                                        <span>@Term.session.Name</span>
                                    </div>
                                    <div class="nk-tb-col ">
                                        <ul class="nk-tb-actions gx-1">
                                            <li>
                                                <div class="dropdown">
                                                    <a href="#" class="dropdown-toggle btn btn-icon btn-trigger" data-bs-toggle="dropdown">
                                                        <em class="icon ni ni-more-h"></em>
                                                    </a>
                                                    <div class="dropdown-menu dropdown-menu-end">
                                                        <ul class="link-list-opt">
                                                            <li>
                                                                <a class="edit-mo"
                                                                   data-id="@Term.Id"
                                                                   data-name="@Term.Name"
                                                                   data-start="@Term.StartDate.ToString("yyyy-MM-dd")"
                                                                   data-end="@Term.EndDate.ToString("yyyy-MM-dd")"
                                                                   data-sessionId="@Term.SessionId"
                                                                   data-bs-toggle="modal"
                                                                   data-bs-target="#Edit">
                                                                    <em class="icon ni ni-edit"></em><span>Edit</span>
                                                                </a>
                                                            </li>
                                                            @if (Term.StartDate <= DateOnly.FromDateTime(DateTime.Today))
                                                            {
                                                                @* <li>
                                                                    <a href="" data-bs-toggle="modal">
                                                                        <em class="icon ni ni-delete"></em><span>Delete</span>
                                                                    </a>
                                                                </li> *@
                                                            }
                                                            else
                                                            {
                                                                <li>
                                                                    <a href="#@del" data-bs-toggle="modal">
                                                                        <em class="icon ni ni-delete"></em><span>Delete</span>
                                                                    </a>
                                                                </li>

                                                            }
                                                        </ul>
                                                    </div>
                                                </div>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                                <!-- .nk-tb-item -->
                                //models
                                <div class="modal fade" tabindex="-1" id="@del">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content p-5">
                                            <a href="#" class="close" data-bs-dismiss="modal" aria-label="Close">
                                                <em class="icon ni ni-cross"></em>
                                            </a>
                                            <h5 class="modal-title text-center">
                                                Are you sure you want to delete This Term ?
                                            </h5>
                                            <div class="col-13">
                                                <ul class="justify-center align-center flex-wrap flex-sm-nowrap gx-4 gy-2 mt-3">
                                                    <li>
                                                        <form asp-action="Delete" asp-controller="Term" asp-route-id="@Term.Id"
                                                              method="post">
                                                            <button class="btn btn-primary" type="submit">
                                                                Delete
                                                            </button>
                                                        </form>
                                                    </li>
                                                    <li>
                                                        <a href="#" class="link" data-bs-dismiss="modal">Cancel</a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>


                                <!-- .modal -->
                                //Record payment modal Edit
                                <div class="modal fade" role="dialog" id="Edit">
                                    <div class="modal-dialog modal-dialog-centered " role="document">
                                        <div class="modal-content">
                                            <a href="#" class="close" data-bs-dismiss="modal"><em class="icon ni ni-cross-sm"></em></a>
                                            <div class="modal-body modal-body-lg">
                                                <h5 class="title pb-3">Edit Term</h5>
                                                <form method="post" asp-controller="Term" asp-action="Edit">
                                                    <div class="row gy-4">
                                                        <input hidden name="Id" id="edit-id" value="@Term.Id" />
                                                        <div class="col-md-12">
                                                            <div class="form-group">
                                                                <label class="form-label">Name</label>
                                                                <div class="form-control-wrap">
                                                                    <input type="text" id="edit-name" class="form-control" required name="name" placeholder="Name" />
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-12">
                                                            <div class="form-group">
                                                                <label class="form-label">Session</label>
                                                                <div class="form-control-wrap">
                                                                    <select asp-items="@ViewBag.Sessions as List<SelectListItem>" class="form-select" required id="SessionSelect" name="Sessid" placeholder="">
                                                                        @* <option disabled  value="">-- Select Session --</option> *@
                                                                    </select>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-12">
                                                            <div class="form-group">
                                                                <label class="form-label">StartDate</label>
                                                                <div class="form-control-wrap">
                                                                    <input type="text" id="edit-start" class="form-control date-picker" required name="startDate" placeholder="StartDate" />
                                                                    <div class="form-note">Date format <code>mm/dd/yyyy</code></div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-12">
                                                            <div class="form-group">
                                                                <label class="form-label">EndDate</label>
                                                                <div class="form-control-wrap">
                                                                    <input type="text" id="edit-end" class="form-control date-picker" required name="endDate" placeholder="EndDate" />
                                                                    <div class="form-note">Date format <code>mm/dd/yyyy</code></div>
                                                                </div>
                                                            </div>
                                                        </div>

                                                        <div class="col-sm-12 col-xxl-3">
                                                            <div class="form-group">
                                                                <button type="submit" id="subbtn" class="btn btn-primary btn-lg">Update</button>
                                                                <a href="#" type="button" data-bs-dismiss="modal" class="link link-light">Cancel</a>
                                                            </div>
                                                        </div><!--col-->
                                                    </div>
                                                </form>
                                            </div><!-- .modal-body -->
                                        </div><!-- .modal-content -->
                                    </div><!-- .modal-dialog -->
                                </div>

                                <!-- .modal -->
                            }
                        </div><!-- .nk-tb-list -->
                        <div class="card-inner">
                            <div class="nk-block-between-md g-3">
                                <div class="g">
                                    <ul class="pagination justify-content-center justify-content-md-start">
                                        <li class="page-item"><a class="page-link @(Model.HasPreviousPage ? "": "disabled")" href=@Url.Action("Index", new { PageIndex = Model.PageIndex - 1, PageSize = pageSize, Query = query }))>Prev</a></li>
                                        @* <li class="page-item"><a class="page-link" href="#">1</a></li> *@
                                        @* <li class="page-item"><a class="page-link" href="#">2</a></li> *@
                                        <li class="page-item"><span class="page-link"><em class="icon ni ni-more-h"></em></span></li>
                                        @* <li class="page-item"><a class="page-link" href="#">6</a></li> *@
                                        @* <li class="page-item"><a class="page-link" href="#">7</a></li> *@
                                        <li class="page-item"><a class="page-link @(Model.HasNextPage ? "" : "disabled")" href=@Url.Action("Index", new { PageIndex = Model.PageIndex +1, PageSize = pageSize, Query = query }))>Next</a></li>
                                    </ul><!-- .pagination -->
                                </div>
                                <div class="g">
                                    <div class="pagination-goto d-flex justify-content-center justify-content-md-start gx-3">
                                        <div>Page</div>
                                        <div>
                                            @Model.PageIndex
                                        </div>
                                        <div>OF @Model.TotalPages</div>
                                    </div>
                                </div><!-- .pagination-goto -->
                            </div><!-- .nk-block-between -->
                        </div><!-- .card-inner -->
                        <!-- .card-inner -->
                    </div>
                </div><!-- .card-inner -->
            </div><!-- .card-inner-group -->
        </div><!-- .card -->
    </div>


    <!-- .nk-block -->
}
else
{

    <div class="nk-block nk-block-middle wide-xs mx-auto">
        <div class="nk-block-content nk-error-ld text-center">
