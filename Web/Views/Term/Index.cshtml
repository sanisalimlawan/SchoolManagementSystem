                <h5 class="title pb-3">Create New Term</h5>
                <form method="post" asp-controller="Term" asp-action="Create">
                    <div class="row gy-4">
                        <input hidden name="Id" value="" />
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="form-label">Name</label>
                                <div class="form-control-wrap">
                                    <input type="text" class="form-control" required name="name" placeholder="Name" />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="form-label">Session</label>
                                <div class="form-control-wrap">
                                    <select asp-items="@ViewBag.Sessions as List<SelectListItem>" class="form-select" required id="SessionSelect" name="Sessid" placeholder="">
                                        <option disabled selected>-- Select Session --</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="form-label">StartDate</label>
                                <div class="form-control-wrap">
                                    <input type="text" class="form-control date-picker" required name="startDate" placeholder="StartDate" />
                                    <div class="form-note">Date format <code>mm/dd/yyyy</code></div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="form-label">EndDate</label>
                                <div class="form-control-wrap">
                                    <input type="text" class="form-control date-picker" required name="endDate" placeholder="EndDate" />
                                    <div class="form-note">Date format <code>mm/dd/yyyy</code></div>
                                </div>
                            </div>
                        </div>

                        <div class="col-sm-12 col-xxl-3">
                            <div class="form-group">
                                <button type="submit" id="subbtn" class="btn btn-primary btn-lg">Create</button>
                                <a href="#" type="button" data-bs-dismiss="modal" class="link link-light">Cancel</a>
                            </div>
                        </div><!--col-->
                    </div>
                </form>
            </div><!-- .modal-body -->
        </div><!-- .modal-content -->
    </div><!-- .modal-dialog -->
</div>


